<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#2C0404"
    android:padding="16dp">

    <TextView
        android:id="@+id/titleEditText"
        android:layout_width="wrap_content"
        android:layout_height="69dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="49dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="-1dp"
        android:layout_toStartOf="@+id/imageView4"
        android:fontFamily="monospace"
        android:scrollbars="vertical"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="bold"
        android:typeface="monospace"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/contentEditText"
        android:layout_width="wrap_content"
        android:layout_height="470dp"
        android:layout_below="@id/titleEditText"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="1dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="1dp"
        android:background="@drawable/rounded_edittext"
        android:fontFamily="monospace"
        android:inputType="textMultiLine"
        android:scrollbars="vertical"
        android:textColor="#2C0404"
        android:textColorHint="#2C0404"
        android:textStyle="bold|italic"
        app:layout_constraintWidth_percent="0.5"

        android:typeface="monospace"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/submitButton"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_below="@+id/contentEditText"
        android:layout_alignParentStart="true"
        android:layout_marginStart="1dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="1dp"
        android:layout_toStartOf="@+id/submitButton3"
        android:background="#32100404"
        android:enabled="false"
        android:visibility="gone"
        android:text="Edit"
        android:textColor="#EBE9E9" />

    <Button
        android:id="@+id/submitButton3"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_below="@+id/contentEditText"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="24dp"
        android:background="#54C70707"
        android:enabled="false"
        android:visibility="gone"
        android:text="Delete"
        android:textColor="#FFFFFF"
        android:textStyle="bold|italic" />

    <Switch
    android:id="@+id/switch1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentStart="true"
    android:layout_alignParentBottom="true"
    android:layout_marginStart="1dp"
    android:layout_marginBottom="1dp"
    android:text="RU"
    android:textColor="#FFFFFF"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    android:visibility="gone"
    android:enabled="false" />

<ImageView
    android:id="@+id/imageView4"
    android:layout_width="137dp"
    android:layout_height="115dp"
    android:layout_alignParentTop="true"
    android:layout_alignParentEnd="true"
    android:layout_marginTop="1dp"
    android:layout_marginEnd="1dp"
    app:srcCompat="@drawable/coffee__1_" />

</RelativeLayout>

