<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2C0404"
    android:padding="16dp">

    <EditText
        android:id="@+id/titleEditText"
        android:layout_width="203dp"
        android:layout_height="109dp"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="0dp"
        android:scrollbars="vertical"
        android:overScrollMode="ifContentScrolls"
        android:layout_toStartOf="@+id/imageView4"
        android:hint="Title"
        android:inputType="text" />

    <EditText
        android:id="@+id/contentEditText"
        android:background="@drawable/rounded_edittext"
        android:textColor="#2C0404"
        android:textColorHint="#2C0404"
        android:textStyle="bold|italic"
        android:layout_width="379dp"
        android:layout_height="470dp"
        android:layout_below="@id/titleEditText"
        android:layout_marginTop="5dp"
        android:scrollbars="vertical"
        android:overScrollMode="ifContentScrolls"
        android:hint="Content"
        android:inputType="textMultiLine" />

    <Button
        android:id="@+id/submitButton"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_below="@+id/contentEditText"
        android:layout_alignParentStart="true"
        android:layout_marginStart="1dp"
        android:layout_marginTop="25dp"
        android:background="#32100404"
        android:text="Submit"
        android:textColor="#EBE9E9" />

    <Button
        android:id="@+id/submitButton3"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_below="@+id/contentEditText"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="60dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="1dp"
        android:layout_toEndOf="@+id/submitButton"
        android:background="#1EAD8E8E"
        android:text="Draft"
        android:textColor="#FFFFFF"
        android:textStyle="bold|italic" />

    <Switch
        android:id="@+id/switch1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/submitButton"
        android:layout_alignParentStart="true"
        android:layout_marginStart="1dp"
        android:layout_marginTop="5dp"
        android:text="RU"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="137dp"
        android:layout_height="115dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="1dp"
        app:srcCompat="@drawable/coffee" />

</RelativeLayout>